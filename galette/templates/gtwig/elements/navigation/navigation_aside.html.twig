<aside class="ui computer only toc">
    <div class="ui basic center aligned segment">
        <img src="{{ path_for('logo') }}" width="{{ logo.getOptimalWidth() }}" height="{{ logo.getOptimalHeight() }}" alt="{{ preferences.__get('pref_nom') }}" class="icon"/>
        <div class="ui block huge brand header">
            {{ preferences.__get('pref_nom') }}
            {% if preferences.__get('pref_slogan') %}<div class="sub tiny header">{{ preferences.__get('pref_slogan') }}</div>{% endif %}
        </div>
    </div>

    {% include "elements/modes.html.twig" %}

    <div class="ui vertical accordion menu">
        {% include "elements/navigation/navigation_items.html.twig" %}
    </div>

{% if login.isLogged() %}
    {% include "elements/logout.html.twig" with {
            ui: "segment"
        }
    %}
{% endif %}
</aside>
