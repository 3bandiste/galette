            {% elseif column.field_id == 'tel_adh' or column.field_id == 'gsm_adh' %}
                {% set lrclass = rclass %}
            {% elseif column.field_id == 'id_statut' %}
                {% set lrclass = rclass %}
                {% set value = member.sstatus %}
            {% elseif column.field_id == 'titre_adh' %}
