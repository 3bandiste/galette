/*******************************
         Galette Overrides
*******************************/

.ui.styled.accordion .title,
.ui.styled.accordion .accordion .title {
  background: @styledTitleBackground;
}

.listing td .ui.accordion {
   width: 100%;
   max-height: 200px;
   overflow: auto
}

/*-------------
     No JS
--------------*/
.nojs .ui.accordion.menu:not(.styled) .title ~ .content:not(.ui) {
   display:block;
}
